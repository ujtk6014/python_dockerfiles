##############################################################################
##                                 Base Image                               ##
##############################################################################
ARG BASE_IMAGE
FROM ${BASE_IMAGE}

##############################################################################
##                            Additional Packages                           ##
############################################################################## 
RUN apt-get update
RUN apt-get install -y python3 python3-pip

RUN pip3 install \
    gym \
    tqdm \
    scipy \
    numpy \
    pylint \
    pandas \
    matplotlib \
    torch \
    torchvision

WORKDIR /
##############################################################################
##                             terminal setting                             ##
##############################################################################
RUN echo "export PS1='\[\e[1;33;42m\]PYTHON_DEV\[\e[0m\] \u:\w\$ '">> ~/.bashrc
